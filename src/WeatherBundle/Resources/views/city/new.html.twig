{% extends 'base.html.twig' %}

{% block body %}
    <h1>Создание города {% verbatim %}{{ city_name }}{% endverbatim %}</h1>

    <div class = "row text-center">
        <div class="col-md-4 text-left">
            <a href="{{ path('city_new') }}">Добавить город</a>
        </div>

        <div class="col-md-8 text-right">
            <form class="navbar-form" role="search" id="nav-search-form" method="get" action="{{ path('city_search') }}">
                <div class="input-group">
                    <input type="search" class="form-control" placeholder="Поиск города" name ="search">
                </div>
            </form>
        </div>
    </div>

    <div class="row" style="background: rgba(89, 213, 241, 0.18); border-radius: 6px;">

        <div class="col-md-5" style="margin-top: 2%">
            <form class="form-horizontal" method="post" action="{{ path('city_new') }}">
                {#{{ form_row(form._token) }}#}
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Название</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.name, {'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'Название', 'ng-model': 'city_name' }}) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Население</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.population, {'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'Население'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Широта</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.latitude, {'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'Широта'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Долгота</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.longitude, {'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'Долгота'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" class="btn btn-default" value="Редактировать" />
                    </div>
                </div>
                {{ form_rest(form) }}
            </form>
        </div>

    </div>


    {#{{ form_start(form) }}
    {{ form_row(form._token) }}
    {{ form_rest(form) }}
    {{ form_widget(form) }}
    <input type="submit" value="Edit" />
    {{ form_end(form) }}#}

    <ul>
        <li>
            <a href="{{ path('city_index') }}">Вернуться к списку</a>
        </li>
    </ul>
{% endblock %}
