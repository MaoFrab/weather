{% extends 'base.html.twig' %}

{% block body %}
    <h1>Редактирование города {{ city.name }}</h1>

    <div class = "row text-center">
        <div class="col-md-4 text-left">
            <a href="{{ path('city_new') }}">Добавить город</a>
        </div>

        <div class="col-md-8 text-right">
            <form class="navbar-form" role="search" id="nav-search-form" method="get" action="{{ path('city_search') }}">
                <div class="input-group">
                    <input type="search" class="form-control" placeholder="Поиск города" name ="search">
                </div>
            </form>
        </div>
    </div>

    <div class="row" style="background: rgba(89, 213, 241, 0.18); border-radius: 6px;">

    <div class="col-md-5" style="margin-top: 2%">
    <form class="form-horizontal" method="post" action="{{ path('city_edit', { 'id': city.id }) }}">
        {#{{ form_row(form._token) }}#}
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Название</label>
            <div class="col-sm-10">
                {{ form_widget(edit_form.name, {'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'Название'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Население</label>
            <div class="col-sm-10">
                {{ form_widget(edit_form.population, {'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'Население'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Широта</label>
            <div class="col-sm-10">
                {{ form_widget(edit_form.latitude, {'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'Широта'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Долгота</label>
            <div class="col-sm-10">
                {{ form_widget(edit_form.longitude, {'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'Долгота'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-default" value="Редактировать" />
            </div>
        </div>
        {{ form_rest(edit_form) }}
    </form>
    </div>
        <div class="text-right" style="margin-right: 2%"> {#.col-md-offset-4#}
            <img class = "img-rounded" alt="" locale="ru" src="//static-maps.yandex.ru/1.x/?ll={{ city.latitude }},{{ city.longitude }}&amp;size=450,450&amp;z=9&amp;l=map&amp;pt={{ city.latitude }},{{ city.longitude }},pmwtm1~{{ city.latitude }},{{ city.longitude }},org">
        </div>

    </div>

    {#{{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}#}


    <div calss="row">
        <a style="float: right;" href="{{ path('city_index') }}">Вернуться к списку</a>
    </div>
{% endblock %}
