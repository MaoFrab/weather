{% extends 'base.html.twig' %}

{% block body %}
    <h1>City</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ city.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ city.name }}</td>
            </tr>
            <tr>
                <th>Population</th>
                <td>{{ city.population }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ city.longitude }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ city.latitude }} </td>
            </tr>
            <tr>
                <th>Data Source</th>
                <td>{{ city.datasource }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('city_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('city_edit', { 'id': city.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('city_add_data_source', { 'id': city.id }) }}">Add Data Source</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
