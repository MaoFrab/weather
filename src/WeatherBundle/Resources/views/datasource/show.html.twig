{% extends 'base.html.twig' %}

{% block body %}
    <h1>DataSource</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dataSource.id }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ dataSource.longitude }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ dataSource.latitude }} </td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ dataSource.name }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ dataSource.temperature }}</td>
            </tr>

            <tr style="color: deepskyblue">
                <th>Cities</th>
                {% for c in cities %}
                    <td>{{ c }}</td>
                {% endfor %}
            </tr>

        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('datasource_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('datasource_edit', { 'id': dataSource.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
