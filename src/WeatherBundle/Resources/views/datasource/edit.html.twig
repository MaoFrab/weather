{% extends 'base.html.twig' %}

{% block body %}
    <h1>Редактирование источника данных {{ datasource.name }}</h1>

    <div class = "row text-center">
        <div class="col-md-4 text-left">
            <a href="{{ path('datasource_new') }}">Добавить город</a>
        </div>
    </div>

    <div class="row" style="background: rgba(89, 213, 241, 0.18); border-radius: 6px; margin-top: 2%">

        <div class="col-md-5" style="margin-top: 2%">
            <form class="form-horizontal" method="post" action="{{ path('datasource_edit', { 'id': datasource.id }) }}">
                {#{{ form_row(form._token) }}#}
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Название</label>
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.name, {'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'Название'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Население</label>
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.temperature, {'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'Население'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Широта</label>
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.latitude, {'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'Широта'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Долгота</label>
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.longitude, {'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'Долгота'}}) }}
                    </div>
                </div>

                {{ form_rest(edit_form) }}

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" class="btn btn-default" value="Редактировать" />
                    </div>
                </div>
            </form>
        </div>
        <div class="text-right" style="margin-right: 2%">
            <img class = "img-rounded" alt="" locale="ru" src="//static-maps.yandex.ru/1.x/?ll={{ datasource.latitude }},{{ datasource.longitude }}&amp;size=450,450&amp;z=9&amp;l=map&amp;pt={{ datasource.latitude }},{{ datasource.longitude }},pmwtm1~{{ datasource.latitude }},{{ datasource.longitude }},org">
        </div>

    </div>

    {#{{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}#}


    <div calss="row">
        <a style="float: right;" href="{{ path('city_index') }}">Вернуться к списку</a>
    </div>
{% endblock %}
