{% extends 'base.html.twig' %}

{% block body %}
    <h1>Создание источника данных {% verbatim %}{{ datasource_name }}{% endverbatim %}</h1>

    <div class="row" style="background: rgba(89, 213, 241, 0.18); border-radius: 6px; margin-top: 2%">

        <div class="col-md-5" style="margin-top: 2%">
            <form class="form-horizontal" method="post" action="{{ path('datasource_new') }}">
                {#{{ form_row(form._token) }}#}
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Название</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.name, {'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'Название', 'ng-model': 'datasource_name' }}) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Температура</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.temperature, {'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'Температура'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Широта</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.latitude, {'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'Широта'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Долгота</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.longitude, {'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'Долгота'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" class="btn btn-default" value="Редактировать" />
                    </div>
                </div>
                {{ form_rest(form) }}
            </form>
        </div>

    </div>


    {#{{ form_start(form) }}
    {{ form_row(form._token) }}
    {{ form_rest(form) }}
    {{ form_widget(form) }}
    <input type="submit" value="Edit" />
    {{ form_end(form) }}#}

    <div calss="row">
        <a style="float: right;" href="{{ path('city_index') }}">Вернуться к списку</a>
    </div>
{% endblock %}
